{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TurboMCP Studio",
  "version": "0.1.0",
  "identifier": "com.turbomcpstudio.studio",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TurboMCP Studio",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default capabilities for TurboMCP Studio",
          "windows": ["main"],
          "webviews": ["main"],
          "permissions": [
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:default",
            "fs:allow-write-text-file",
            "fs:default",
            "core:event:allow-listen",
            "core:event:default",
            "http:allow-fetch",
            "http:default",
            "log:allow-log",
            "log:default",
            "opener:default",
            "shell:default",
            "shell:allow-execute",
            "shell:allow-open",
            "clipboard-manager:default",
            "clipboard-manager:allow-read-text",
            {
              "identifier": "shell:allow-execute",
              "allow": [
                {
                  "name": "open-finder",
                  "cmd": "open",
                  "args": ["-R", { "validator": ".*" }],
                  "sidecar": false
                }
              ]
            },
            {
              "identifier": "opener:allow-open-path",
              "allow": [
                {
                  "path": "$APPDATA"
                },
                {
                  "path": "$APPDATA/**"
                },
                {
                  "path": "$APPLOG"
                },
                {
                  "path": "$APPLOG/**"
                },
                {
                  "path": "$HOME/Library/Application Support/**"
                },
                {
                  "path": "$HOME/Library/Logs/**"
                },
                {
                  "path": "https://**"
                },
                {
                  "path": "http://**"
                }
              ]
            },
            {
              "identifier": "http:allow-fetch",
              "allow": [
                {
                  "url": "http://localhost:*"
                },
                {
                  "url": "http://127.0.0.1:*"
                },
                {
                  "url": "http://192.168.*.*:*"
                },
                {
                  "url": "https://*"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
